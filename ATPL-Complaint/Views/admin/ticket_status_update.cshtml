@model ATPL_Complaint.Models.support_ticket
@{
    Layout = "~/Views/Shared/admin_layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <title>Ticket Status</title>
    <meta name="viewport" content="width=device-width" />
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/javascript.js"></script>
    <script src="~/js/jquery-3.5.1.min.js"></script>
    @*<link href="~/css/bootstrap.css" rel="stylesheet" />*@
    <link href="~/css/style.css" rel="stylesheet" />

    <style>
        .change {
            width: 100%
        }
    </style>
</head>
<body>
    <div class="col-lg-12 main-body">
        @using (Html.BeginForm("ticket_status_update", "admin", FormMethod.Post))
        {
            <div class="row">
                <div class="col-md-12"><h3 style="color: #0b4077;font-size: xx-large">TICKET STATUS UPDATE</h3></div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <div class="col-mg-6">
                            @Html.LabelFor(Model => Model.date, htmlAttributes: new { @class = "control-label" })
                            @Html.ValidationMessageFor(Model => Model.date, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-mg-6">
                            @Html.DisplayFor(Model => Model.date, new { @class = "form-control change", type = "Date" })
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <div class="col-mg-3">
                            @Html.LabelFor(Model => Model.ticket_for, htmlAttributes: new { @class = "control-label" })
                            @Html.ValidationMessageFor(Model => Model.ticket_for, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-mg-3">
                            @Html.DisplayFor(Model => Model.ticket_for, new { @class = "control-label" })
                            @*@Html.DropDownListFor(model => model.ticket_for, (List<SelectListItem>)ViewBag.CategoryItems, "Select Ticket", new { @class = "form-control" })*@
                        </div>
                    </div>
                </div>

                <div class="col-lg-6">
                    <div class="form-group">
                        <div class="col-mg-3">
                            @Html.LabelFor(Model => Model.message, htmlAttributes: new { @class = "control-label" })
                            @Html.ValidationMessageFor(Model => Model.message, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-mg-3">
                            @Html.TextAreaFor(Model => Model.message, htmlAttributes: new { @class = "form-control" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-12">
                @*<span style="color:red">@ViewBag.Mess</span>*@
                <span style="color:red">@TempData["msg"]</span>
        @*<span style="color:red">@TempData["msg"]</span>
            <span style="color:red">@TempData["mg"]</span>*@
            </div>
            <div class="col-lg-12">
                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="UPDATE" />
                </div>
            </div>
        }
    </div>
</body>
</html>
