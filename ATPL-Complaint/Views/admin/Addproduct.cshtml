@model ATPL_Complaint.Models.product
@{
    Layout = "~/Views/Shared/admin_layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <title>Add - Product</title>
    <meta name="viewport" content="width=device-width" />
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/javascript.js"></script>
    <script src="~/js/jquery-3.5.1.min.js"></script>
    @*<link href="~/css/bootstrap.css" rel="stylesheet" />*@
    <link href="~/css/style.css" rel="stylesheet" />

    <style>
        .change{
            width:100%
        }
    </style>
</head>
<body>
    <div class="col-lg-12 main-body">
        @using (Html.BeginForm("AddProduct", "admin", FormMethod.Post))
        {
        <div class="row">
            <div class="col-md-12"><h3 style="color: #0b4077;font-size: xx-large">ADD PRODUCT</h3></div>
            <div class="col-lg-6">
                <div class="form-group">
                    <div class="col-mg-3">
                        @Html.LabelFor(Model => Model.product_id, htmlAttributes: new { @class = "control-label" })
                        @Html.ValidationMessageFor(Model => Model.product_id, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-mg-3">
                        @Html.TextBoxFor(Model => Model.product_id, new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    <div class="col-mg-3">
                        @Html.LabelFor(Model => Model.product_category, htmlAttributes: new { @class = "control-label" })
                        @Html.ValidationMessageFor(Model => Model.product_category, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-mg-3">
                        @Html.DropDownListFor(model => model.product_category, (List<SelectListItem>)ViewBag.CategoryListItems, "Select Product Category", new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    <div class="col-mg-3">
                        @Html.LabelFor(Model => Model.product_name, htmlAttributes: new { @class = "control-label" })
                        @Html.ValidationMessageFor(Model => Model.product_name, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-mg-3">
                        @Html.TextBoxFor(Model => Model.product_name, new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    <div class="col-mg-3">
                        @Html.LabelFor(Model => Model.description, htmlAttributes: new { @class = "control-label" })
                        @Html.ValidationMessageFor(Model => Model.description, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-mg-3">
                        @Html.TextAreaFor(Model => Model.description, htmlAttributes: new { @class = "form-control" })
                    </div>
                </div>
            </div>
        </div>
            <div class="col-lg-12">
                <span style="color:red">@ViewBag.Mess</span>
                <span style="color:red">@ViewBag.Message</span>
                <span style="color:red">@TempData["msg"]</span>
                <span style="color:red">@TempData["mg"]</span>
            </div>
            <div class="col-lg-12">
                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="Submit" />
                </div>
            </div>
        }
    <div style="padding-top:50px;">
        <table class="table table-striped">
            <tr>
                <th>Product id</th>
                <th>Product Category</th>
                <th>Product Name</th>
                <th>Description</th>
                <th style="text-align:center">Edit</th>
                <th style="text-align:center">Delete</th>
            </tr>

            @foreach (var item in ViewBag.productlist)
            {
        <tr>
            <td>@item.product_id</td>
            <td>@item.product_category</td>
            <td>@item.product_name</td>
            <td>@item.description</td>
            <td align="center">
                <a href="@Url.Action("Addproduct", new { item.id })" class="btn btn-success">Edit</a>

            </td>
            <td align="center">
                <a href="@Url.Action("productdelete", new { item.id })" OnClick="return confirm('Are you sure? want to delete the data.');" class="btn btn-danger">Delete</a>
            </td>
        </tr>
            }
        </table>
    </div>
        </div>
</body>
</html>