@model ATPL_Complaint.Models.assi_product
@{
    Layout = "~/Views/Shared/admin_layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <title>Assign-Product</title>
    <meta name="viewport" content="width=device-width" />
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/javascript.js"></script>
    <script src="~/js/jquery-3.5.1.min.js"></script>
    @*<link href="~/css/bootstrap.css" rel="stylesheet" />*@
    <link href="~/css/style.css" rel="stylesheet" />
</head>
<body>
    <div class="col-lg-12 main-body">
        @using (Html.BeginForm("Assiproduct", "admin", FormMethod.Post))
        {
            <div class="row">
                <div class="col-md-12"><h3 style="color: #0b4077;font-size: xx-large">ASSIGN PRODUCT</h3></div>
                <div class="col-lg-6">
                    <div class="form-group">

                        @Html.LabelFor(Model => Model.select_product, htmlAttributes: new { @class = "control-label" })
                        @Html.ValidationMessageFor(Model => Model.select_product, "", new { @class = "text-danger" })
                        @Html.DropDownListFor(model => model.select_product, ViewBag.CategoryListItems as IEnumerable<SelectListItem>, "Select Product", new { @class = "form-control" })
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        @Html.LabelFor(Model => Model.select_client, htmlAttributes: new { @class = "control-label" })
                        @Html.ValidationMessageFor(Model => Model.select_client, "", new { @class = "text-danger" })
                        @Html.DropDownListFor(model => model.select_client, ViewBag.CategoryList as IEnumerable<SelectListItem>, "Select Client", new { @class = "form-control" })
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        @Html.LabelFor(Model => Model.select_emp, htmlAttributes: new { @class = "control-label" })
                        @Html.ValidationMessageFor(Model => Model.select_emp, "", new { @class = "text-danger" })
                        @Html.DropDownListFor(model => model.select_emp, ViewBag.Category as IEnumerable<SelectListItem>, "Select Employee", new { @class = "form-control" })
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        @Html.LabelFor(Model => Model.select_project_supp, htmlAttributes: new { @class = "control-label" })
                        @Html.ValidationMessageFor(Model => Model.select_project_supp, "", new { @class = "text-danger" })
                        @Html.DropDownListFor(model => model.select_project_supp, ViewBag.Category as IEnumerable<SelectListItem>, "Select Project Support Team", new { @class = "form-control" })
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <div class="col-mg-6">
                            @Html.LabelFor(Model => Model.installation_date, htmlAttributes: new { @class = "control-label" })
                            @Html.ValidationMessageFor(Model => Model.installation_date, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-mg-6">
                            @Html.TextBoxFor(Model => Model.installation_date, new { @class = "form-control change", type = "Date" })
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <div class="col-mg-3">
                            @Html.LabelFor(Model => Model.amc_date, htmlAttributes: new { @class = "control-label" })
                            @Html.ValidationMessageFor(Model => Model.amc_date, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-mg-3">
                            @Html.TextBoxFor(Model => Model.amc_date, new { @class = "form-control change", type = "Date" })
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <div class="col-mg-3">
                            @Html.LabelFor(Model => Model.amount, htmlAttributes: new { @class = "control-label" })
                            @Html.ValidationMessageFor(Model => Model.amount, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-mg-3">
                            @Html.TextBoxFor(Model => Model.amount, new { @class = "form-control change" })
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <div class="col-mg-3">
                            @Html.LabelFor(Model => Model.amc_per, htmlAttributes: new { @class = "control-label" })
                            @Html.ValidationMessageFor(Model => Model.amc_per, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-mg-3">
                            @Html.TextBoxFor(Model => Model.amc_per, new { @class = "form-control change" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-12">
                <span style="color:red">@ViewBag.Message</span>
                <span style="color:red">@TempData["msg"]</span>
                <span style="color:red">@TempData["mg"]</span>
            </div>
            <div class="col-lg-12">
                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="Submit" />
                </div>
            </div>
        }
    </div>
    <div style="padding-top:50px;">
        <table class="table table-striped">
            <tr>
                <th>PRODUCT</th>
                <th>CLIENT</th>
                <th>EMPLOYEE</th>
                <th>PROJECT SUPPORT TEAM</th>
                <th>INSTALLATION DATE</th>
                <th>AMC DATE</th>
                <th>AMOUNT</th>
                <th>AMC %</th>
                <th style="text-align:center">Edit</th>
                    <th style="text-align:center">Delete</th>
            </tr>

            @foreach (var item in ViewBag.assiproductlist)
            {
                <tr>
                    <td>@item.select_product</td>
                    <td>@item.select_client</td>
                    <td>@item.select_emp</td>
                    <td>@item.select_project_supp</td>
                    <td>@item.installation_date</td>
                    <td>@item.amc_date</td>
                    <td>@item.amount</td>
                    <td>@item.amc_per</td>
                    <td align="center">
                            <a href="@Url.Action("Assiproduct",new { item.id})" class="btn btn-success">Edit</a>

                        </td>
                        <td align="center">
                            <a href="@Url.Action("assi_productdelete",new { item.id })" OnClick="return confirm('Are you sure? want to delete the data.');" class="btn btn-danger">Delete</a>
                        </td>
                </tr>
            }
        </table>
    </div>
</body>
</html>