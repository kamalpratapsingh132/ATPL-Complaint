@{
    ViewBag.Title = "adminMasterPage";
}

<!doctype html>
<html>
<head>
    <title>admin Layout</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700,800,900" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="~/registerdesign/css/style.css" rel="stylesheet" />
</head>
<body>

    <div class="wrapper d-flex align-items-stretch">
        <nav id="sidebar">
            <div class="p-4 pt-5">
                <div class="col-md-12" style="text-align:center"><img src="~/img/images.jpg" class="rounded-circle" width="200" /></div>
                <h5 class="text-center" style="color:white">WELCOME @Convert.ToString(Session["UserName"])</h5>
            <ul class="list-unstyled components mb-5">
                <li class="active">
                <li><a href="/admin/Addclient">ADD CLIENT</a></li>
                <li><a href="/admin/Addproduct">ADD PRODUCT</a></li>
                <li><a href="/admin/ticket_check">TICKET STATUS</a></li>
                <li><a href="/admin/adminlogin">LOGOUT</a></li>
            </ul>

                <div class="footer">
               
                </div>

            </div>
        </nav>

        <!-- Page Content  -->
        <div id="content" class="p-4 p-md-5">

            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid">
                    <div class="glyphicon-text-width">
                        <button type="button" id="sidebarCollapse" class="btn btn-primary" style="width:fit-content">
                            @*<i class="fa fa-bars"></i>*@
                            <span class="sr-only">Toggle Menu</span>
                        </button>
                    </div>
                    <button class="btn btn-dark d-inline-block d-lg-none ml-auto" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <i class="fa fa-bars"></i>
                    </button>


                    <div class="collapse navbar-collapse" id="navbarSupportedContent">

                        <ul class="nav navbar-nav ml-auto">
                            <li class="nav-item active">
                                <a class="nav-link" href="/admin/Addclient">ADD CLIENT</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/admin/Addproduct">ADD PRODUCT</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/admin/ticket_check">TICKET STATUS</a>
                            <li class="nav-item">
                                <a class="nav-link" href="/admin/adminlogin">LOGOUT</a>
                            </li>
                        </ul>
                    </div>

                </div>
            </nav>

            @RenderBody()


        </div>
    </div>
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/registerdesign/js/jquery.min.js"></script>
    <script src="~/registerdesign/js/popper.js"></script>
    <script src="~/registerdesign/js/bootstrap.min.js"></script>
    <script src="~/registerdesign/js/main.js"></script>

    <script src="~/Scripts/jquery-3.4.1.js"></script>
</body>
</html>